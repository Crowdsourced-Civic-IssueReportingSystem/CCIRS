generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("CITIZEN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  issues    Issue[]
  comments  Comment[]
  votes     Vote[]
}

model Issue {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  status      String   @default("PENDING")
  severity    String   @default("MEDIUM")
  latitude    Float
  longitude   Float
  address     String?
  reporter    User     @relation(fields: [reporterId], references: [id])
  reporterId  String
  assignedTo  String?
  media       IssueMedia[]
  comments    Comment[]
  votes       Vote[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IssueMedia {
  id        String   @id @default(cuid())
  issue     Issue    @relation(fields: [issueId], references: [id])
  issueId   String
  url       String
  type      String
  createdAt DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  issue     Issue    @relation(fields: [issueId], references: [id])
  issueId   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vote {
  id       String @id @default(cuid())
  issue    Issue  @relation(fields: [issueId], references: [id])
  issueId  String
  user     User   @relation(fields: [userId], references: [id])
  userId   String

  @@unique([issueId, userId])
}
