# Database connection string (set to SQLite for local or Postgres in prod)
DATABASE_URL=file:C:/Temp/ccirs_dev.db

# JWT secrets (required)
JWT_ACCESS_SECRET=my_dev_access_secret_key_change_in_production
JWT_REFRESH_SECRET=my_dev_refresh_secret_key_change_in_production

# JWT expirations
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# Server
PORT=3000

# CORS origin (set to your client origin, e.g., http://localhost:5500 for Live Server)
CORS_ORIGIN=*
